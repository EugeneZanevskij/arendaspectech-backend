generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String
  email        String   @unique
  phone        String
  password     String
  isAdmin      Boolean
  bookings     Booking[]
}

model Services {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  equipmentToServices EquipmentToServices[]
}

model EquipmentType {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  equipment   Equipment[]
}

model Equipment {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  description  String
  imagePath    String
  equipmentTypeId Int
  price        Int
  equipmentType EquipmentType @relation(fields: [equipmentTypeId], references: [id])
  equipmentToServices EquipmentToServices[]
}

model EquipmentToServices {
  id           Int      @id @default(autoincrement())
  servicesId   Int
  equipmentId  Int
  services     Services @relation(fields: [servicesId], references: [id])
  equipment    Equipment @relation(fields: [equipmentId], references: [id])
  bookings     Booking[]
}

model Status {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  bookings     Booking[]
}

model Booking {
  id           Int      @id @default(autoincrement())
  userId       Int
  equipmentToServicesId Int
  date         DateTime @unique
  leaseDuration Int
  comment      String
  statusId     Int
  user         User     @relation(fields: [userId], references: [id])
  equipmentToServices EquipmentToServices @relation(fields: [equipmentToServicesId], references: [id])
  status       Status   @relation(fields: [statusId], references: [id])
}